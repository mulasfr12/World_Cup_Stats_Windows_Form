<UserControl x:Class="WorldCupWPF.PlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WorldCupWPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock x:Name="PlayerName" Text="Player Name" HorizontalAlignment="Center" Margin="5" FontSize="12"/>
        <Image x:Name="PositionIcon" Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock x:Name="ShirtNumber" Text="10" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="5" FontSize="14" FontWeight="Bold"/>
    </Grid>
</UserControl>
